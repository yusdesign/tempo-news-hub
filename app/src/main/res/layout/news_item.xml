<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Time-aware icon -->
        <TextView
            android:id="@+id/news_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="ðŸ’¡"
            android:textSize="20sp"
            android:layout_marginEnd="12dp"/>

        <!-- Content area -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="News Title Here"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/news_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description of the news item goes here with more details"
                android:textSize="14sp"
                android:textColor="#666666"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginTop="4dp"/>

            <!-- Source and time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/news_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Source"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:background="@drawable/source_chip"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"/>

                <TextView
                    android:id="@+id/news_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2h ago"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginStart="8dp"/>

                <!-- Usefulness indicator -->
                <TextView
                    android:id="@+id/usefulness_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ¯ 87%"
                    android:textSize="11sp"
                    android:textColor="#4CAF50"
                    android:layout_marginStart="8dp"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Action button -->
        <ImageButton
            android:id="@+id/action_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_more_vert"
            android:layout_gravity="center_vertical"
            android:contentDescription="More actions"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

